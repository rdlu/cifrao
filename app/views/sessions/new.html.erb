<div class="row-fluid">
  <div class="span12" style="text-align: center;">
    <h1>Identifique-se!</h1>
    <%= form_tag sessions_path do %>
        <div class="span4 offset4">
        <% if flash[:alert] %>
            <div class="alert alert-error">
              <%= flash[:alert] %>
            </div>
        <% end %>
        <div class="field">
          <%= text_field_tag :email, params[:email], :placeholder => "E-Mail", :class => 'input-block-level' %>
        </div>
        <div class="field">
          <%= password_field_tag :password, nil, :placeholder => "Senha", :class => 'input-block-level' %>
        </div>
          <%= submit_tag "Entrar!", :class => 'btn btn-primary btn-large btn-block' %>
          <h4>Se já tiveres cadastro, digite seus dados e clique em entrar.</h4>
          <%=  link_to "Não tenho cadastro!", new_user_path, :class => 'btn btn-warning btn-block', :style => 'color:white' %><br />
          <%=  link_to "Esqueci minha senha", {:controller => "users", :action => "reset_password"}, :class => 'btn btn-info btn-block', :style => 'color:white' %>
        </div>

    <% end %>
</div></div>
